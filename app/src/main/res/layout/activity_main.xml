<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F5F5"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="82dp"
            android:layout_marginEnd="12dp"
            android:background="#619DFE"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.713">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textAlignment="center"
                android:textColor="#FEFEFE"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:srcCompat="@android:drawable/ic_menu_help" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="311dp"
            android:layout_height="167dp"
            android:layout_marginStart="16dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ericssonpic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.773" />

        <LinearLayout
            android:id="@+id/faqButton"
            android:layout_width="70dp"
            android:layout_height="85dp"
            android:layout_marginTop="-494dp"
            android:background="@color/blue"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.903"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.505"
            tools:ignore="TextSizeCheck">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/faq_text"
                android:textColor="@color/cardview_light_background"
                android:textSize="23sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />

            <ImageButton
                android:id="@+id/faqBtn"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                app:srcCompat="@android:drawable/ic_dialog_info" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/mapButton"
            android:layout_width="70dp"
            android:layout_height="85dp"
            android:layout_marginTop="8dp"
            android:background="@color/blue"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.115"
            tools:ignore="TextSizeCheck">

            <TextView
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/map_text"
                android:textColor="@color/cardview_light_background"
                android:textSize="23sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:importantForAccessibility="no"
                app:srcCompat="@android:drawable/ic_dialog_map" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuButton"
            android:layout_width="70dp"
            android:layout_height="85dp"
            android:layout_marginTop="-138dp"
            android:background="@color/blue"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.633"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.28"
            tools:ignore="TextSizeCheck">

            <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/menu_text"
                android:textColor="@color/cardview_light_background"
                android:textSize="23sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                app:srcCompat="?android:attr/actionModeWebSearchDrawable"
                app:tint="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/chatButton"
            android:layout_width="70dp"
            android:layout_height="85dp"
            android:layout_marginTop="8dp"
            android:background="@color/blue"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.369"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.115"
            tools:ignore="TextSizeCheck">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/chat_text"
                android:textColor="@color/cardview_light_background"
                android:textSize="23sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />

            <ImageButton
                android:id="@+id/chatBtn"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                app:srcCompat="@android:drawable/stat_notify_chat" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:background="#0A53CF"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/oranFaceBtn"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-11dp"
                android:layout_marginTop="1dp"
                android:backgroundTint="#0A53CE"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="@string/start_up"
                android:textColor="#F4E9E9"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-10dp"
                android:text="@string/ericsson_for_beginners"
                android:textColor="#EAD9D9"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0A53CF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="VisualLintBottomNav">

            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="#0A53CE"
                android:text="@string/logout_text" />

        </com.google.android.material.bottomnavigation.BottomNavigationView>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="360dp"
            android:layout_height="258dp"
            android:layout_marginStart="8dp"
            android:text="@string/about"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.395"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.365"
            tools:ignore="VisualLintLongText"></TextView>

        <ImageView
            android:id="@+id/oranFaceImage"
            android:layout_width="412dp"
            android:layout_height="738dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/oran_s_face" />

        <Button
            android:id="@+id/guideBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue"
            android:text="Guide to your First Day"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.882" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>